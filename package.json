{
	"dependencies": {
		"@parcel/config-webextension": "^2.11.0",
		"parcel": "^2.11.0"
	},
	"scripts": {
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"build": "parcel build manifest.json",
		"dev": "parcel watch manifest.json"
	},
	"targets": {
		"default": {
			"sourceMap": false,
			"engines": {
				"browsers": "Chrome 91"
			}
		}
	},
	"@parcel/transformer-js": {
		"inlineEnvironment": [
			"ETHS_*"
		]
	},
	"devDependencies": {
		"@types/chrome": "^0.0.258",
		"prettier": "^3.6.2"
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"printWidth": 100,
		"quoteProps": "consistent"
	}
}
